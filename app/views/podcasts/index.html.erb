<div class="banner" id="podcasts_banner">
  <h1>Discover Your New Favorite Podcast</h1>
</div>

<div class="wrapper">
  <div id="podcasts" class="cf">
    <ul>
      <% @podcasts.each do |podcast| %>
        <%= link_to podcast do %>
          <li>
            <%= image_tag podcast.thumbnail.url(:medium) %>
            <div class="podcast_overview">
              <h2><%= podcast.title %></h2>
              <p class="episode_count">1 Episode</p>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div><!--closes podcasts-->

